{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "baseUrl": "src",
    "paths": {
      "@routes/*": [
        "./routes/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@entities/*": [
        "./entities/*"
      ],
      "@useCases/*": [
        "./useCases/*"
      ],
      "@repositories/*": [
        "./repositories/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "/**/*.spec.ts",
    "/**/*.test.ts"
  ]
}