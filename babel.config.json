{
  "presets": [
    [
      "@babel/preset-typescript"
    ],
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ]
  ],
  "plugins": [
    ["module-resolver", {
      "alias": {
        "@routes": "./src/routes",
        "@utils": "./src/utils",
        "@entities": "./src/entities",
        "@useCases": "./src/useCases",
        "@repositories": "./src/repositories"
      }
    }]
  ],
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}